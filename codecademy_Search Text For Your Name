//This program checks a block of text for your name!

text = "Hou are you? Is your name Hou?"
var myName = "Hou"
var hits = []
for (var i = 0; i < text.length; i ++) {
    if (text[i] === myName[0]){
        for (var j = i; j < (i + myName.length); j++){
            hits.push(text[j]);
        }
    }
}

if (text[i] !== myName[0]){
    console.log("Your name wasn't found!");
}
else {
    console.log(hits);
}
